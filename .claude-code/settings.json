{
  "tools": {
    "bash": {
      "allowed": true,
      "patterns": [
        "flow transactions send*",
        "flow scripts execute*",
        "flow accounts *",
        "flow project init*",
        "flow config*",
        "flow version*",
        "flow blocks*",
        "flow collections*",
        "flow events*",
        "flow keys*",
        "flow signatures*",
        "flow status*",
        "flow snapshot*",
        "flow transactions*",
        "flow cadence*",
        "./scripts/*",
        "./full-game-test.sh",
        "cd *",
        "ls*",
        "cat *",
        "head *",
        "tail *",
        "grep *",
        "find *",
        "pwd",
        "echo *",
        "mkdir *",
        "rm *",
        "cp *",
        "mv *",
        "chmod *",
        "git status",
        "git log*",
        "git diff*",
        "git add*",
        "git commit*",
        "git push*",
        "git pull*",
        "git branch*",
        "git checkout*",
        "npm *",
        "node *",
        "python *",
        "pip *",
        "curl *",
        "wget *",
        "which *",
        "whoami",
        "date",
        "sleep *",
        "kill *",
        "ps *",
        "top",
        "htop",
        "df *",
        "du *",
        "free",
        "uname *"
      ],
      "blocked": [
        "flow project deploy*",
        "flow deploy*",
        "rm -rf /*",
        "sudo *",
        "su *",
        "chmod 777 *",
        "dd *",
        "mkfs*",
        "fdisk*",
        "> /dev/*"
      ]
    }
  }
}